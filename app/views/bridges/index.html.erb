<%= link_to "Add new Bridge", new_bridge_path, class: "link" %>




<div class="relative flex min-w-screen flex-col justify-center overflow-hidden bg-gray- py-6 sm:py-12">
  <div class="mx-auto max-w-screen-xl px-4 w-full">
    <div class="grid w-full sm:grid-cols-2 xl:grid-cols-4 gap-6">
			<% @bridges.includes(:user).each do |bridge| %>
				<div class="relative flex flex-col shadow-md rounded-xl overflow-hidden hover:shadow-lg hover:-translate-y-1 transition-all duration-300 max-w-sm">
					<div>
						<%= link_to bridge_path(bridge), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
								<path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
							</svg>

						<% end %>
					</div>
				
					<div class="h-auto overflow-hidden">
						<div class="h-44 overflow-hidden relative">
							<%= image_tag "bridge#{rand(1..3)}.png" %>
						</div>
					</div>
					<div class="bg-white py-4 px-3">
						<h3 class="text-xs mb-2 font-medium"><%= bridge.name %> </h3>
						<div class="flex justify-between items-center">
							<p class="text-xs text-gray-400">
								Author: <%= bridge.user.username %> 
							</p>
					
							<div class="relative z-40 flex items-center gap-2">
								<%= link_to bridge_path(bridge), method: :get do %>
									<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
  									<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 0 0-1.883 2.542l.857 6a2.25 2.25 0 0 0 2.227 1.932H19.05a2.25 2.25 0 0 0 2.227-1.932l.857-6a2.25 2.25 0 0 0-1.883-2.542m-16.5 0V6A2.25 2.25 0 0 1 6 3.75h3.879a1.5 1.5 0 0 1 1.06.44l2.122 2.12a1.5 1.5 0 0 0 1.06.44H18A2.25 2.25 0 0 1 20.25 9v.776" />
									</svg>

								<%end%>
								<a class="" href="">
									<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
										<path stroke-linecap="round" stroke-linejoin="round" d="M7.5 14.25v2.25m3-4.5v4.5m3-6.75v6.75m3-9v9M6 20.25h12A2.25 2.25 0 0 0 20.25 18V6A2.25 2.25 0 0 0 18 3.75H6A2.25 2.25 0 0 0 3.75 6v12A2.25 2.25 0 0 0 6 20.25Z" />
									</svg>
								</a>
								<%= link_to edit_bridge_path(bridge), method: :get do %>
									<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
										<path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
									</svg>
								<%end%>

							</div>
						</div>
					</div>
				</div>
			<% end %>
    </div>
  </div>
</div>
	
	

