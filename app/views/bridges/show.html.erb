<script>
document.addEventListener("DOMContentLoaded", function () {
  function showTab(tabId) {
    // Hide all tab content
    const allTabContents = document.querySelectorAll(".tab-pane");
    allTabContents.forEach((tabContent) => {
      tabContent.classList.remove("active");
      tabContent.classList.add("hidden");
    });

    // Show the selected tab content
    const selectedTabContent = document.querySelector(`#${tabId}-content`);
    if (selectedTabContent) {
      selectedTabContent.classList.remove("hidden");
      selectedTabContent.classList.add("active");
    }

    // Reset all tabs
    const allTabs = document.querySelectorAll(".tab-link");
    allTabs.forEach((tab) => {
      tab.classList.remove("text-blue-600", "border-blue-600", "dark:text-blue-500", "dark:border-blue-500");
      tab.classList.add("hover:text-gray-600", "border-transparent");
    });

    // Set the clicked tab as active
    const activeTab = document.querySelector(`a[href="#${tabId}"]`);
    if (activeTab) {
      activeTab.classList.add("text-blue-600", "border-blue-600", "dark:text-blue-500", "dark:border-blue-500");
      activeTab.classList.remove("hover:text-gray-600", "border-transparent");
    }
  }

  // Check the URL hash on page load and display the correct tab
  const currentHash = window.location.hash.substring(1); // Remove the '#' symbol
  if (currentHash) {
    showTab(currentHash);
  } else {
    showTab('tab1'); // Default tab
  }

  // Add click event listeners to tab links
  const tabLinks = document.querySelectorAll(".tab-link");
  tabLinks.forEach((link) => {
    link.addEventListener("click", function (event) {
      event.preventDefault(); // Prevent default link behavior
      const tabId = this.getAttribute("href").substring(1); // Get the tab ID from the href
      showTab(tabId);
      window.history.pushState(null, null, `#${tabId}`); // Update the URL without reloading
    });
  });
});


</script>