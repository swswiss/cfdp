<div class="max-w-xl mx-auto">
  <div class="px-4 sm:px-0">
    <h3 class="text-base font-semibold leading-7 text-gray-900">Account Overview</h3>
    <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">Personal details</p>
  </div>
  <div class="mt-6 border-t border-gray-100">
    <dl class="divide-y divide-gray-100">
      
      <!-- Full name -->
      <div class="flex items-center justify-between px-4 py-6">
        <dt class="text-sm font-medium leading-6 text-gray-900">Full name</dt>
        <dd class="mt-0 text-sm leading-6 text-gray-700 text-right"><%= @user.firstname %> <%= @user.lastname %></dd>
      </div>

      <!-- Username -->
      <div class="flex items-center justify-between px-4 py-6">
        <dt class="text-sm font-medium leading-6 text-gray-900">Username</dt>
        <dd class="mt-0 text-sm leading-6 text-gray-700 text-right"><%= @user.username %></dd>
      </div>

      <!-- Email address -->
      <div class="flex items-center justify-between px-4 py-6">
        <dt class="text-sm font-medium leading-6 text-gray-900">Email address</dt>
        <dd class="mt-0 text-sm leading-6 text-gray-700 text-right"><%= @user.email %></dd>
      </div>

      <!-- Role -->
      <div class="flex items-center justify-between px-4 py-6">
        <dt class="text-sm font-medium leading-6 text-gray-900">Role</dt>
        <dd class="mt-0 text-sm leading-6 text-gray-700 text-right"><%= @user.role.capitalize %></dd>
      </div>

      <!-- Bridges created -->
      <div class="flex items-center justify-between px-4 py-6">
        <dt class="text-sm font-medium leading-6 text-gray-900">Number of bridges</dt>
        <dd class="mt-0 text-sm leading-6 text-gray-700 text-right">
          <% if @user.role == 'admin' || @user.role == 'super admin'%>
            <%= @user.bridges.count %> / Unlimited
          <% else %>
            <%= @user.bridges.count %> / 3
          <% end %>
        </dd>
      </div>

    </dl>
  </div>
</div>
